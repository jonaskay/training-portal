<% content_for :title, "Organization Credentials" %>

<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Organization Credentials</h1>
    <%= link_to "New Organization Credential", new_organization_credential_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="min-w-full">
    <table class="min-w-full mt-6 bg-white border border-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="py-2 px-4 border-b text-left">Title</th>
          <th class="py-2 px-4 border-b text-left">Username</th>
          <th class="py-2 px-4 border-b text-left">Created</th>
          <th class="py-2 px-4 border-b text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @organization_credentials.each do |organization_credential| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-2 px-4"><%= organization_credential.title %></td>
            <td class="py-2 px-4"><%= organization_credential.username %></td>
            <td class="py-2 px-4"><%= organization_credential.created_at.strftime("%B %d, %Y") %></td>
            <td class="py-2 px-4">
              <%= link_to "Show", organization_credential, class: "text-blue-600 hover:text-blue-800 mr-2" %>
              <%= link_to "Edit", edit_organization_credential_path(organization_credential), class: "text-green-600 hover:text-green-800 mr-2" %>
              <%= button_to "Delete", organization_credential, method: :delete, 
                          form: { onsubmit: "return confirm('Are you sure you want to delete this organization credential?')" }, 
                          class: "text-red-600 hover:text-red-800 bg-transparent border-none cursor-pointer" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @organization_credentials.empty? %>
      <p class="mt-6 text-gray-600">No organization credentials found.</p>
    <% end %>
  </div>
</div>