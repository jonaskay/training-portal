<% content_for :title, @organization_credential.title %>

<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= @organization_credential.title %></h1>
    <div>
      <%= link_to "Edit", edit_organization_credential_path(@organization_credential), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium mr-2" %>
      <%= link_to "Back", organization_credentials_path, class: "rounded-lg py-3 px-5 bg-gray-600 text-white inline-block font-medium" %>
    </div>
  </div>

  <div class="mt-6 bg-white border border-gray-200 rounded-lg p-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">Title</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @organization_credential.title %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Username</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @organization_credential.username %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Created At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @organization_credential.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Updated At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @organization_credential.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
    </dl>
  </div>

  <div class="mt-6">
    <%= button_to "Delete", @organization_credential, method: :delete, 
                form: { onsubmit: "return confirm('Are you sure you want to delete this organization credential?')" }, 
                class: "rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium" %>
  </div>
</div>